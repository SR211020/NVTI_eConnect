@model eConnectV2.ViewModels.LabTestViewModel
@{
    ViewData["Title"] = "NVTI-Reliability Lab";
    ViewData["PageHeading"] = "Reliability Lab";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Module = "Reliability Lab";
    ViewBag.Category1 = "Manage Sample";
}
@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/bootstrap-datepicker/bootstrap-datepicker.css">
}
<div class="panel">
    <div class="panel-hdr min-height-reset height-3 bg-primary-gradient" role="heading">
        <h2>
            Test Running <span class="fw-300">Sample</span>
        </h2>
    </div>
    <div class="panel-container show">
        <div class="panel-content">
            <table class="table table-sm table-bordered m-0">
                <thead class="bg-info-500">
                    <tr>
                        <th>Testing</th>
                        <th>Start Time</th>
                        <th>Product</th>
                        <th>Model</th>
                        <th>Part No.</th>
                        <th>Qty.</th>
                        <th>Test</th>
                        <th>Test Conditions</th>
                        <th>Request</th>
                        <th>Department</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SampleRunningList)
                    {
                        <tr>
                            <td>
                                <div class="spinner-border spinner-border-sm text-success ml-3" role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                            </td>
                            <td class="font-weight-bold">
                                <span>@item.TestStartDate</span>
                                <a href="javascript:void(0);" class="btn btn-outline-primary waves-effect waves-themed btn-xs ml-2" onclick="UpdateRunningTest(@item.ID)">
                                    Update
                                </a>
                            </td>
                            <td>
                                @if (item.Product == "Other")
                                {
                                    @item.ProductOther
                                }
                                else
                                {
                                    @item.Product
                                }
                            </td>
                            <td>@item.ModelName</td>
                            <td>@item.PartNumber</td>
                            <td class="font-weight-bold text-primary">@item.SampleQty</td>
                            <td>@item.TestName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.DocUId))
                                {
                                    <a title="Download" href="@Url.Action("Download", "Quality", new { filename = item.DocUId })"><i class="fas fa-file-alt ml-2 mr-2 text-primary"></i></a>
                                }
                                <span id="SpanTitle_@item.ID" title="@item.TestConditionIfAny">
                                    @item.TestConditionIfAny.Substring(0, (item.TestConditionIfAny.Length > 30 ? 30 : item.TestConditionIfAny.Length))
                                    @{
                                        if (item.TestConditionIfAny.Length > 30)
                                        {
                                            <span class="font-weight-bold cursor-pointer" onclick="ShowFullText(@item.ID)">...show more</span>
                                        }
                                    }
                                </span>
                            </td>
                            <td>@item.EmpName <b><i class="text-primary">at</i></b> @item.RequestDate</td>
                            <td>@item.Department</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div id="dataListOption" class="alert alert-link mb-0 pb-2">
    <div class="icheck-primary d-inline">
        <input type="radio" id="radioPrimary1" name="r1" value="Pending" checked="">
        <label for="radioPrimary1" class="text-info">
            Pending
        </label>
    </div>
    <div class="icheck-danger d-inline ml-5">
        <input type="radio" id="radioPrimary2" name="r1" value="Accepted">
        <label for="radioPrimary2" class="text-primary">
            Accepted & Pending for Start Test
        </label>
    </div>
    <div class="icheck-danger d-inline ml-5">
        <input type="radio" id="radioPrimary3" name="r1" value="Pass">
        <label for="radioPrimary3" class="text-success">
            Pass
        </label>
    </div>
    <div class="icheck-danger d-inline ml-5">
        <input type="radio" id="radioPrimary4" name="r1" value="HoldFailed">
        <label for="radioPrimary4" class="text-danger">
            Hold / Failed
        </label>
    </div>
    <div class="icheck-danger d-inline ml-5">
        <input type="radio" id="radioPrimary5" name="r1" value="Reject">
        <label for="radioPrimary5" class="text-muted">
            Reject
        </label>
    </div>
</div>

<div id="dataList">
    <div class="row">
        <div class="col-md-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="table-responsive">
                            <table id="dt-hs" class="table w-100 table-bordered table-sm table-hover nowrap">
                                <thead class="bg-primary-800">
                                    <tr>
                                        <th>Action</th>
                                        <th>Status</th>
                                        <th>Product</th>
                                        <th>Model</th>
                                        <th>Part No.</th>
                                        <th>Qty.</th>
                                        <th>Test</th>
                                        <th>Test Conditions</th>
