@section ScriptsBlock {
    <script src="~/js/formplugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/js/datagrid/datatables/dths.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/datagrid/datatables/datatables.export.js"></script>
    <script>
        $(document).ready(function () {
            $(function () {
                runDatePicker();
            });
            var controls = {
                leftArrow: '<i class="fas fa-angle-left" style="font-size: 1.25rem"></i>',
                rightArrow: '<i class="fas fa-angle-right" style="font-size: 1.25rem"></i>'
            }
            var runDatePicker = function () {
                var date = new Date();
                $('#TestStartDate').datepicker({
                    todayHighlight: true,
                    orientation: "bottom left",
                    templates: controls,
                    autoclose: true,
                    startDate: date
                });
            }
        });
    </script>
    <script type="text/javascript">
        var eId = "0";
        $(document).ready(function () {
            var action = '@ViewBag.SearchOption'
            if (action == 'Pending') {
                $("#radioPrimary1").prop("checked", true);
            }
            if (action == 'Accepted') {
                $("#radioPrimary2").prop("checked", true);
            }
            if (action == 'Pass') {
                $("#radioPrimary3").prop("checked", true);
            }
            if (action == 'HoldFailed') {
                $("#radioPrimary4").prop("checked", true);
            }
            if (action == 'Reject') {
                $("#radioPrimary5").prop("checked", true);
            }
        });
        $('input:radio[name="r1"]').change(function () {
            if ($(this).is(':checked') && $(this).val() == 'Pending') {
                GetSampleOption(21);
            }
            else if ($(this).is(':checked') && $(this).val() == 'Accepted') {
                GetSampleOption(22);
            }
            else if ($(this).is(':checked') && $(this).val() == 'Pass') {
                GetSampleOption(23);
            }
            else if ($(this).is(':checked') && $(this).val() == 'HoldFailed') {
                GetSampleOption(24);
            }
            else if ($(this).is(':checked') && $(this).val() == 'Reject') {
                GetSampleOption(25);
            }
        });
        function GetSampleOption(type) {
            var requestUrl = 'Quality/GetSampleOption';
            $.ajax({
                url: requestUrl,
                type: "POST",
                data: { type: type },
                success: function () {
                    location.replace(location.href);
                },
                error: function () {

                }
            });
        }
    </script>
    <script type="text/javascript">
        var eId = "0";
        function AcceptSample(Id) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                type: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, Accept it!"
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        url: "/Quality/AcceptSample",
                        type: "POST",
                        data: { Id: Id },
                        success: function () {
                            Swal.fire("Accepted!", "Sample Accepted successfully", "success").then(function () {
                                window.location.reload();
                            })
                        },
                        error: function () {
                            Swal.fire("Oops...", "Something went wrong!", "error");
                        }
                    });
                }
            });
        }
        function RejectSampleConfirm(Id) {
            eId = Id;
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                type: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, Reject it!"
            }).then(function (result) {
                if (result.value) {
                    $('#msg1').text('');
                    $('#default-example-modal').modal("show");
                }
            });
        }
        function RejectSample() {
            var sampleReject = $('#sampleReject').val();
            if (sampleReject == '') {
                $('#msg1').text('Reason is required');
            }
            else {
                $.ajax({
                    url: "/Quality/RejectSample",
                    type: "POST",
                    data: { Id: eId, reason: sampleReject },
                    success: function () {
                        $('#default-example-modal').modal("hide");
                        Swal.fire("Rejected!", "Sample Rejected successfully", "success").then(function () {
                            window.location.reload();
                        })
                    },
                    error: function () {
                        Swal.fire("Oops...", "Something went wrong!", "error");
                    }
                });
            }
        }
        function ShowFullText(id) {
            $('#span_showfull_text').text($('#SpanTitle_' + id).prop("title"))
            $('#default-example-modal-center').modal("show");
        }
        function ShowReasonFullText(Id) {
            $('#span_showfull_text').text($('#SpanReasonTitle_' + Id).prop("title"))
            $('#default-example-modal-center').modal("show");
        }
        function StartSampleTesting(Id) {
            eId = Id;
