@model eConnectV2.ViewModels.AttendanceViewModel
@{
    ViewData["Title"] = "Fire-Marshal Dashboard";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["URL"] = Url.Action("Dashboard", "Home");
    ViewData["HeaderTitle"] = "Fire-Marshal Dashboard";
}

@section HeadBlock {
    <meta http-equiv="refresh" content="1800"> @*1800 Seconds*@
    <style>
        p {
            font-size: 10px;
            text-align: center;
            font-weight: bold;
            margin: 0;
            color: #000;
            width: 70px;
        }
        h1 {
            font-size: 10px;
            text-align: center;
            margin: 0;
            color: #000;
            width: 70px;
        }
        .emp_img {
            width: 70px;
            height: 60px;
        }

        .column {
            float: left;
            width: 7%;
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        @if (Model.EmployeeList != null && Model.EmployeeList.Count > 0)
        {
            <div class="card well">
                <div class="card-body p-1">
                    <div class="row pl-3">
                        @foreach (var item in Model.EmployeeList)
                        {
                        <div class="column border-dark p-2">
                            @if (item.ImageName == "")
                            {
                                <img class="shadow img-thumbnail emp_img" src="~/img/DefaultProfile.jpg" />
                            }
                            else
                            {
                                <img class="shadow img-thumbnail emp_img" src="@item.ImageName" />
                            }
                            <p>@item.EmpName</p>
                            <p>@item.ContactNo</p>
                            <h1>@item.Department</h1>
                        </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>





